<%= link_to admin_kit_templates_path(kit[:slug]), class: "for__rotate" do %>
  <div class="wow fadeIn col-xs-12 col-sm-6 col-md-4" data-wow-delay="0.7s">
    <div class="main__grid-thumbnail">
      <div class="main__rotate img-responsive main__blok_for_img">
        <%= image_tag "#{kit.cover_image}", style: "height: 200px; width: 250px;" %>
      </div>
      <span class="fa-stack fa-3x main__follow">
        <i class="fa fa-circle fa-stack-2x"></i>
        <i class="fa fa-share fa-stack-1x fa-inverse"></i>
      </span>
      <%= link_to admin_kit_templates_path(kit[:slug]), class: "main__a_btn btn-link text-center" do %>
        <%= kit.title %>
      <% end %>
      <%= link_to "Edit", edit_admin_kit_path(id: kit.id), remote: true, class: "main__btn_bg0 btn_adm main__btn btn pull-left", id: "btn__orange" %>
      <%= link_to "Delete", admin_kit_path(id: kit.id), remote: true, method: :delete,  data: { confirm: 'Are you sure?' }, class: "btn_adm main__btn btn_last btn pull-left", id: "btn__orange" %>
    </div>
  </div>
<% end %>

