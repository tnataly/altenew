
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-body modal__bottom_inset">
        <button class="close" type="button" data-dismiss="modal">&times;</button>
        <h4 class="text-center">Create new kit</h4>
        <hr class="text-center heading__modal_hr">
        <div class="modal1__block">
          <%= simple_form_for [:admin, @kit], remote: true, :html => {:class => 'inline-form modal__form'} do |f|%>
            <div class="form-group">
              <%= f.label "Tilte" %>
              <%= f.input :title, placeholder: "Your title", input_html: { class: 'form-control' }, label: false %>
            </div>
            <div class="form-group">
              <%= f.label "Cover image" %>
              <%= f.file_field :cover_image, :multipart => true, type: "file", "data-buttonName" => "btn-primary file-url", "data-buttonText" => "UPLOAD IMAGE", "data-icon" => "false", "data-placeholder" => "Your image", class: "form-control filestyle" %>
            </div>
            <%= f.button :submit, 'Save template', class: "btn main__btn center-block main__btn-md main__btn_bgm", type: "submit" %>
          <% end %>
          </div>
      </div>
    </div>
  </div>






