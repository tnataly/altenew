<div class="col-xs-12 col-sm-12 col-md-6">
  <div class="template__grid">
      <div class="main__blok_for_img2 img-responsive">
        <%= link_to edit_admin_kit_template_path(@kit, template[:slug]), class: "for__rotate" do %>
          <div class="main__blok_for_img3 img-responsive">
            <%= image_tag "#{template.cover_image}", style: "height: 287px; width: 388px;" %>
            <span class="fa-stack fa-3x main__follow-lg">
              <i class="fa fa-circle fa-stack-2x"></i>
              <i class="fa fa-share fa-stack-1x fa-inverse"></i>
            </span>
          </div>
        <% end %>
      </div>
    <hr class="pull-left template__hr_t">
    <br>
    <h4 class="pull-left template__head_adm2"><%= template.title %></h4>
    <%= link_to "Edit", edit_admin_kit_template_path(@kit, template[:slug]), class: "main__btn_bg0 main__btn_inf main__btn pull-right btn template__btn_adm", type: "button", id: "btn__orange" %>
    <%= link_to "Delete", admin_kit_template_path(@kit, template), method: :delete, data: { confirm: 'Are you sure you want to delete this item?' }, type: "button", class: "main__btn_inf main__btn pull-right btn template__btn_del", id: "btn__orange" %>
    <hr class="template__hr hidden-xs hidden-sm pull-left">
  </div>
</div>

